<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_from_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_from_json"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_to_json"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_to_json"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_from_json" />

    <EditText
        android:id="@+id/text_to_json"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_json_height"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_to_json" />

    <EditText
        android:id="@+id/text_from_json"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_json_height"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_to_json" />


</androidx.constraintlayout.widget.ConstraintLayout>